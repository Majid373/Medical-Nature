@page
@model WebSite.Areas.Admin.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">لیست نقش ها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست نقش های سایت
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="col-md-12" style="margin: 10px 0;">

                                <a asp-page="/Roles/Create" class="btn btn-outline btn-success">افزودن نقش جدید</a>

                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr>
                                        <th>عنوان نقش</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <tr>
                                            <td>@role.Name</td>
                                            <td>
                                                <a asp-page="/Roles/Edit"  asp-route-id="@role.Id" class="btn btn-warning btn-sm">
                                                    ویرایش
                                                </a>
                                                <a asp-page="/Roles/UsersInRole" asp-route-name="@role.Name" class="btn btn-primary btn-sm">
                                                    لیست کاربران
                                                </a>
                                                <a asp-page="/Roles/Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">
                                                    حذف
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>