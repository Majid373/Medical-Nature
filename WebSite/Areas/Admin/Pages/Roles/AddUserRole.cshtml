@page
@model WebSite.Areas.Admin.Pages.Roles.AddUserRoleModel
@{
    ViewData["Title"] = "Add user to role";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">افزودن نقش جدید</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="col-md-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        نقش
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="form-group">
                            <input type="hidden" asp-for="AddUserRole.Id" />
                            <label>عنوان نقش</label>
                            <select type="text" asp-for="AddUserRole.Role" asp-items="Model.AddUserRole.Roles" class="form-control">
                                <option selected>انتخاب کنید</option>
                            </select>
                        </div>
                        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </form>
    </div>


</div>