@page
@model WebSite.Areas.Admin.Pages.Blogs.EditBlogModel
@{
    ViewData["Title"] = "Edit blog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="EditBlog.ImageName" />
        <input type="hidden" asp-for="EditBlog.Id" />
            <div class="col-md-12">
                <h2>اطلاعات دوره</h2>
                <hr />
                <div class=" form-group">
                    <label>عنوان </label>
                    <input type="text" asp-for="EditBlog.Title" class="form-control">
                    <span asp-validation-for="EditBlog.Title"></span>
                </div>
                <div class= form-group">
                    <label>دسته بندی</label>
                    <input type="text" asp-for="EditBlog.Category" class="form-control">
                    <span asp-validation-for="EditBlog.Category"></span>
                </div>
                <div class="form-group ">
                    <label>انتخاب تصویر</label>
                    <input asp-for="EditBlog.ImageUrl" type="file"  id="imgCourseUp">
                </div>
                <div class="form-group ">
                    <label>شرح دوره</label>
                    <textarea class="form-control" asp-for="EditBlog.Description" rows="10"></textarea>
                    <span asp-validation-for="EditBlog.Description"></span>
                </div>
                    <div class="form-group ">
                    <label>شرح دوره</label>
                    <input class="form-control" asp-for="EditBlog.Summary" rows="10"></input>
                    <span asp-validation-for="EditBlog.Summary"></span>
                </div>

                <input type="submit" value="ذخیره اطلاعات" class="btn btn-success col-md-12" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{

     <script src="https://cdn.ckeditor.com/4.13.0/standard-all/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('EditBlog_Description', {
            language: 'fa',
            contentsLangDirection: 'rtl',
            height: 270,
        });

    </script>
}