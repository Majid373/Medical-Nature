@page 
@model WebSite.Areas.Admin.Pages.Categories.EditCategoryModel
@{
    ViewData["Title"] = "Edit blog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Category.ImageName" />
        <input type="hidden" asp-for="Category.Id" />
            <div class="col-md-12">
                <h2>اطلاعات دوره</h2>
                <hr />
                <div class=" form-group">
                    <label>عنوان </label>
                    <input type="text" asp-for="Category.Name" class="form-control">
                    <span asp-validation-for="Category.Name"></span>
                </div>
                <div class="form-group ">
                    <label>انتخاب تصویر</label>
                    <input asp-for="Category.ImageUrl" type="file" id="imgCourseUp">
                </div>
                <input type="submit" value="ذخیره اطلاعات" class="btn btn-success col-md-12" />
            </div>
        </form>
    </div>
</div>