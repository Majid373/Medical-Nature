@model WebSite.Models.ViewModels.Home.ListOfDoctorsViewModel

@{
    ViewData["Title"] = "ListOfDoctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="list-doctor-page">
        <aside class="list-doctor-aside">
            <h1 class="header-primary">جستجوی پیشرفته</h1>
            <form class="list-doctor-aside-form" action="">
                <label for="" class="lable-primary">نام پزشک: </label>
                <input class="input-primary"
                       type="text"
                       name="filterFullName"
                       placeholder="نام متخصص" />
                <label for="" class="lable-primary">تخصص و فوق تخصص:</label>
                <input class="input-primary"
                       type="text"
                       name="filterExpertise"
                       placeholder="تخصص" />
           
                <button type="submit" asp-action="ListOfDoctors" asp-controller="Home" class="list-doctor-aside-btn">جستجو</button>
            </form>
        </aside>
        <div>
            @foreach (var item in Model.Users)
            {
                <section class="list-doctor-section">
                    <div class="doctor-box">
                        <div class="doctor-box-header">
                            <div class="doctor-box-header-img">
                                <img src="~/UserAvatar/@item.ImageName" alt="" class="doctor-box-avatar">
                                <div>
                                    <h3 class="doctor-box-name">@item.FullName</h3>
                                    <p class="doctor-box-expertise">@item.Expertise</p>
                                </div>
                            </div>
                            <div class="doctor-box-header-rate">
                                <div class="doctor-box-header-rate-item">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         fill="none"
                                         viewBox="0 0 24 24"
                                         stroke-width="1.5" stroke="currentColor" class="rate-icon">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                                    </svg>
                                    <span class="rate-value">4.8</span>
                                </div>
                                <div class="doctor-box-header-rate-item">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         fill="none"
                                         viewBox="0 0 24 24"
                                         stroke-width="1.5"
                                         stroke="currentColor"
                                         class="suggestion-icon">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.633 10.25c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 0 1 2.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 0 0 .322-1.672V2.75a.75.75 0 0 1 .75-.75 2.25 2.25 0 0 1 2.25 2.25c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282m0 0h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 0 1-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 0 0-1.423-.23H5.904m10.598-9.75H14.25M5.904 18.5c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 0 1-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 9.953 4.167 9.5 5 9.5h1.053c.472 0 .745.556.5.96a8.958 8.958 0 0 0-1.302 4.665c0 1.194.232 2.333.654 3.375Z" />
                                    </svg>
                                    <span class="suggestion-value">96 درصد پیشنهاد</span>
                                </div>
                                <span class="comment-number">2733 نظر</span>
                            </div>
                        </div>
                        <div class="doctor-box-body">
                            <div>
                                <p class="doctor-box-body-text"><span>خدمات: </span> درد شکم کودکان، تاخیر رشد، ارزیابی / درمان اختلالات مادر زادی</p>
                            </div>
                            <div class="doctor-box-body-boxWay">
                                <div class="doctor-box-body-way">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         fill="none"
                                         viewBox="0 0 24 24"
                                         stroke-width="1.5"
                                         stroke="currentColor"
                                         class="doctor-box-body-icon">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.25 9.75v-4.5m0 4.5h4.5m-4.5 0 6-6m-3 18c-8.284 0-15-6.716-15-15V4.5A2.25 2.25 0 0 1 4.5 2.25h1.372c.516 0 .966.351 1.091.852l1.106 4.423c.11.44-.054.902-.417 1.173l-1.293.97a1.062 1.062 0 0 0-.38 1.21 12.035 12.035 0 0 0 7.143 7.143c.441.162.928-.004 1.21-.38l.97-1.293a1.125 1.125 0 0 1 1.173-.417l4.423 1.106c.5.125.852.575.852 1.091V19.5a2.25 2.25 0 0 1-2.25 2.25h-2.25Z" />
                                    </svg>
                                    <span>مشاوره تلفنی</span>
                                </div>
                                <div class="doctor-box-body-way">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         fill="none"
                                         viewBox="0 0 24 24"
                                         stroke-width="1.5"
                                         stroke="currentColor"
                                         class="doctor-box-body-icon">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 9.75a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375m-13.5 3.01c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.184-4.183a1.14 1.14 0 0 1 .778-.332 48.294 48.294 0 0 0 5.83-.498c1.585-.233 2.708-1.626 2.708-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
                                    </svg>
                                    <span>مشاوره متنی</span>
                                </div>
                            </div>

                        </div>
                        <div class="doctor-box-footer">
                            <p class="doctor-box-footer-text"><span>آدرس: </span> تهران، بلوار شهران شمالی، بالاتر از فلکه دوم شهران، بعد از مسجد امام علی، ساختمان داروخانه دی</p>
                            <a class="doctor-box-footer-btn" asp-action="Reservation" asp-controller="Home" asp-route-userId="@item.Id">دریافت مشاوره</a>
                        </div>
                    </div>
                </section>
            }

        </div>
    </div>
</div>

