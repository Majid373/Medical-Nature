@model WebSite.Models.ViewModels.User.ForgotPasswordViewModel

@{
    ViewData["Title"] = "فراموشی کلمه عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="login-section">
    <div class="login-body">
        <div class="login-form forgot-password">
            <h1 class="login-title">فراموشی کلمه عبور</h1>
            <p class="forgot-password-text">
                گذرواژه خود را فراموش کرده اید؟ نام کاربری یا ایمیل خود را وارد
                کنید. یک لینک برای ساختن گذرواژه جدید در ایمیل خود دریافت خواهید
                کرد.
            </p>
            <form asp-action="ForgotPassword" asp-controller="Account">
                <div>
                <label asp-for="Email" class="login-lable" for="">ایمیل:</label>
                <input asp-for ="Email" type="text" class="login-input" />
                <span asp-validation-for="Email" class="text-danger asp-validation"></span>
                </div>

                <input type="submit" value="بازیابی کلمه عبور" class="login-body-btn" />

            </form>
        </div>
        <img src="~/medicaltheme/images/pass.jpg" alt="" class="login-img" />
    </div>
</section>