@page
@model WebSite.Areas.Admin.Pages.Categories.DeleteCategoryModel
@{
    ViewData["Title"] = "Add new blog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                حذف کاربر
            </div>
            <div class="panel-body">
                <form method="post">
                    <input type="hidden" asp-for="Category.Id" name="id" />

                    <dl class="dl-horizontal">
                        <dt>عنوان: </dt>
                        <dd>@Model.Category.Name</dd>
                        <dt></dt>
                        <dd>
                            <input type="submit" value="حذف" class="btn btn-danger" />
                        </dd>
                    </dl>
                </form>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>